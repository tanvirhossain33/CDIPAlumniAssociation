@model CDIPAlumniAssociation.Models.JobInfo

@{
    ViewBag.Title = "Post Jobs";
    var message = ViewBag.Message;
}


<header id="head" class="secondary">
    <div class="container">
        @if (message == null)
        {
            <h1>Job Post</h1>
        }
        else
        {
            if (message == "Job Posted  successfully")
            {
                <h1 style="color: greenyellow">@message</h1>
            }
            else
            {
                <h1 style="color: red">@message</h1>
            }

        }
        <p>Post your job circular with all the essential detail information </p>
    </div>
</header>



<div class="container">
    <div class="row">

        @using (Html.BeginForm(new {@class = "form-light mt-20", @role = "form"}))
        {
            <h3 class="section-title">Enter All Required Job Information</h3>
            <div class="col-md-8">
                

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Position Name</label>
                            @Html.TextBoxFor(model => model.JobTitle, new { @class = "form-control", placeholder = "Position Name" })
                            @Html.ValidationMessageFor(model => model.JobTitle)

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Company Name</label>
                            @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", placeholder = "Company Name" })
                            @Html.ValidationMessageFor(model => model.JobNature)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Job Requirement / Responsibility</label>
                    @Html.TextAreaFor(model => model.JobRequirement, new {@class = "form-control", placeholder = "Write All Job Requirements Here...", style = "height: 100px"})
                    @Html.ValidationMessageFor(model => model.JobRequirement)
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Educational Requirement</label>
                            @Html.TextBoxFor(model => model.EducationalRequirement, new { @class = "form-control", placeholder = "Educational Requirements" })
                            @Html.ValidationMessageFor(model => model.EducationalRequirement)

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Experience Requirement</label>
                            @Html.TextBoxFor(model => model.ExperienceRequirement, new { @class = "form-control", placeholder = "Educational Requirements" })
                            @Html.ValidationMessageFor(model => model.ExperienceRequirement)
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Number Of Vacancies</label>
                            @Html.TextBoxFor(model => model.NumberOfVacancies, new { @class = "form-control", @type = "number", placeholder = "Vacancies Number"})
                            @Html.ValidationMessageFor(model => model.NumberOfVacancies)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Job Nature</label>
                            @Html.TextBoxFor(model => model.JobNature, new { @class = "form-control", placeholder = "Job Nature" })
                            @Html.ValidationMessageFor(model => model.JobNature)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Other Benefits</label>
                    @Html.TextAreaFor(model => model.OtherBenefit, new {@class = "form-control", placeholder = "Write Other Benefits Here...", style = "height: 100px"})
                    @Html.ValidationMessageFor(model => model.OtherBenefit)
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Salary Range</label>
                            @Html.TextBoxFor(model => model.SalaryRange, new { @class = "form-control", placeholder = "Salary Range" })
                            @Html.ValidationMessageFor(model => model.SalaryRange)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Application Deadline</label>
                            @Html.TextBoxFor(model => model.ApplicationDeadline, new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(model => model.ApplicationDeadline)
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-two">Post Job</button>
                </div>
            </div>
        }

    </div>
</div>


@section Scripts {

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}