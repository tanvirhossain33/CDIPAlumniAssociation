@model CDIPAlumniAssociation.Models.User

@{
    ViewBag.Title = "Login";
    var message = ViewBag.Message;
}

<header id="head" class="secondary">
    <div class="container">
        @if (message == null)
        {
            <h1>Login</h1>
        }
        else
        {
            <h1 style="color: red">@message</h1>

        }
        <p>Login your account for access all the helpful features and support from CDIP anumni association</p>
    </div>
</header>


<div class="container">
    <div class="row">

        @using (Html.BeginForm(new {  @class = "form-light mt-20", @role = "form"}))
        {
            <div class="col-md-12">
                <h3 class="section-title">Enter Your Login Information</h3>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = " Email Address" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Your Password" })
                            @Html.ValidationMessageFor(model => model.Password)

                        </div>
                    </div>
                </div>
                
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-two">Login</button>
                </div>
            </div>
        }

    </div>
</div>


@section Scripts {

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


}